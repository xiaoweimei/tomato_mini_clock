.cantainer{
  background: #f6f6f6;
  min-height: 100vh;
  max-height: 100vh;
  display: flex;
  flex-direction: column;
}
.header{
  height: 170rpx;
  background: #fff;
  display: flex;
  align-items: center;
  color: #fe996f;
  font-size: 22rpx;
  padding: 10rpx 45rpx;
  margin-bottom: 23rpx;
}
.header .avatar{
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.header .details{
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
}

.header .details .name{
  color: black;
  font-size: 32rpx;
  padding-bottom: 22rpx;
}
.tabs { 
  background: #fff;
  display: flex;
  justify-content: space-around;
  font-size: 28rpx;
  color: #333;
  padding: 20rpx 0;
  margin-bottom: 24rpx;
}
.tabs > view { 
  text-align: center;
  padding: 10rpx 0rpx;
  height: 100%;
  width: 50%;
 }
.tabs > view.hover-active { 
  opacity: 0.5;
 }
.active::after{
  content: '';
  display: block;
  border: 4rpx solid #F87A5F;
  background-color: #F87A5F;
  border-radius: 4rpx;
  margin: 0 auto;
  width: 30%;
  height: 4rpx;
  transition: all 1s;
}
 .afterTabs.active{
  margin-left: 60%;
}
.swiper-wrapper{
  height: 880rpx;
}
.cantainer .lists{
  flex:1;
  padding: 0 24rpx;
  box-sizing: border-box;
  overflow: scroll;
}
.cantainer .lists .item{
  background: #fff;
  font-size: 32rpx;
  color: #333;
  border-radius: 8rpx;
  padding: 16rpx 28rpx 35rpx 40rpx;
  box-shadow: 0rpx 2rpx 6rpx 0rpx rgba(0,0,0,0.10);
  margin-bottom: 32rpx;
}
.cantainer .lists .item .time{
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}
.cantainer .lists .item .content{
  display: flex;
  padding-bottom: 24rpx;
}
.cantainer .lists .item .content text{
  padding-right: 25rpx;
}
.cantainer .lists .item .content detail{
  flex: 1;
  flex-wrap: wrap;
}
.qr::after{border: none;}
.qr{background:transparent;color: #fe996f;font-size: 24rpx;}

